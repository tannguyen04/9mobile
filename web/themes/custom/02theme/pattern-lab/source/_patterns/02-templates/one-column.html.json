{
  "topRegion": {
    "include()": {
      "pattern": "templates-content-layout",
      "only": true
    }
  },
  "mainRegion": {
    "include()": {
      "pattern": "templates-content-layout",
      "with": {
        "contentLayout": {
          "class": "region region-content",
          "items": [
            {
              "include()": {
                "pattern": "components-hero-banner"
              }
            }
          ]
        }
      },
      "only": true
    }
  },
  "footer": {
    "include()": {
      "pattern": "templates-content-layout",
      "with": {
        "contentLayout": {
          "class": "footer",
          "items": [
            {
              "include()": {
                "pattern": "components-footer"
              }
            }
          ]
        }
      }
    }
  }
}
