{
  "blockCta": {
    "columns": "1columns",
    "typeSize": "block-cta--small",
    "items": [
      {
        "include()": {
          "pattern": "components-cta-item",
          "with": {
            "ctaItem": {
              "bgColor": "bg-dark--black",
              "image": {
                "include()": {
                  "pattern": "base-elements-picture",
                  "with": {
                    "picture": {
                      "srcTablet": "../../images/cta/cta-desktop1.jpg",
                      "src": "../../images/cta/cta-mobile1.jpg",
                      "alt": "Image"
                    },
                    "only": true
                  }
                }
              },
              "title": "An extra perk of your job",
              "description": "<p>You could get up to 25% off your Airtime Plan, with O2 Open.</p>",
              "link": {
                "include()": {
                  "pattern": "base-elements-link",
                  "with": {
                    "link": {
                      "class": "link--arrow link--arrow__cicle",
                      "href": "#",
                      "text": "More about O2 Open"
                    }
                  },
                  "only": true
                }
              }
            }
          },
          "only": true
        }
      }
    ]
  }
}
