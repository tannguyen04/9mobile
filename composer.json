{
  "name": "pantheon-systems/example-drops-8-composer",
  "description": "Install drops-8 with Composer on Pantheon.",
  "type": "project",
  "license": "MIT",
  "repositories": {
      "drupal": {
          "type": "composer",
          "url": "https://packages.drupal.org/8"
      },
      "commerce_base": {
          "type": "vcs",
          "url": "https://github.com/drupalcommerce/commerce_base"
      },
      "masonry": {
        "type": "package",
        "package": {
          "name": "desandro/masonry",
          "version": "4.2.0",
          "type": "drupal-library",
          "dist": {
              "url": "https://github.com/desandro/masonry/archive/v4.2.0.zip",
              "type": "zip"
          }
        }
      },
      "imagesloaded": {
        "type": "package",
        "package": {
          "name": "desandro/imagesloaded",
          "version": "4.1.1",
          "type": "drupal-library",
          "dist": {
              "url": "https://github.com/desandro/imagesloaded/archive/v4.1.1.zip",
              "type": "zip"
          }
        }
      },
      "dropzone": {
        "type": "package",
        "package": {
          "name": "enyo/dropzone",
          "version": "4.3.0",
          "type": "drupal-library",
          "dist": {
              "url": "https://github.com/enyo/dropzone/archive/v4.3.0.zip",
              "type": "zip"
          }
        }
      },
      "jquery-ui-slider-pips": {
        "type": "package",
        "package": {
          "name": "simeydotme/jquery-ui-slider-pips",
          "version": "1.11.4",
          "type": "drupal-library",
          "dist": {
              "url": "https://github.com/simeydotme/jQuery-ui-Slider-Pips/archive/v1.11.4.zip",
              "type": "zip"
          }
        }
      }
  },
  "require": {
    "composer/installers": "^1.4",
    "cweagans/composer-patches": "^1.6",
    "desandro/imagesloaded": "4.1.1",
    "desandro/masonry": "4.2.0",
    "drupal-composer/drupal-scaffold": "^2.3",
    "drupal/addtoany": "^1.8",
    "drupal/admin_toolbar": "^1.23",
    "drupal/adminimal_theme": "^1.3",
    "drupal/advagg": "^3.1",
    "drupal/amp": "^1.0",
    "drupal/block_visibility_groups": "^1.1",
    "drupal/bootstrap": "^3.3",
    "drupal/ckeditor_media_embed": "^1.0",
    "drupal/color_field": "2.x-dev",
    "drupal/commerce": "dev-2.x",
    "drupal/components": "^1.0",
    "drupal/config_direct_save": "^1.0",
    "drupal/config_installer": "^1.0",
    "drupal/console": "^1.7",
    "drupal/core": "8.5",
    "drupal/devel": "^1.2",
    "drupal/dropzonejs": "^2.0@alpha",
    "drupal/entity_browser": "^1.3",
    "drupal/entity_embed": "^1.0@beta",
    "drupal/examples": "1.x-dev",
    "drupal/facets": "1.x-dev",
    "drupal/features": "^3.5",
    "drupal/file_browser": "^1.1",
    "drupal/google_analytics": "^2.1",
    "drupal/hreflang": "^1.0",
    "drupal/mailsystem": "^4.1",
    "drupal/media_entity": "^1.6",
    "drupal/media_entity_image": "^1.2",
    "drupal/menu_block": "^1.4",
    "drupal/metatag": "^1.1",
    "drupal/page_manager": "^4.0@beta",
    "drupal/panels": "^4.2",
    "drupal/paragraphs": "^1.2",
    "drupal/pathauto": "^1.0",
    "drupal/redirect": "^1.0@beta",
    "drupal/search_api": "^1.7",
    "drupal/seo_checklist": "^4.0",
    "drupal/simple_block": "^1.0@beta",
    "drupal/simple_sitemap": "^2.9",
    "drupal/swiftmailer": "^1.0@beta",
    "drupal/yoast_seo": "^1.3",
    "drupalcommerce/commerce_base": "dev-8.x-1.x",
    "drush/drush": "~8",
    "enyo/dropzone": "4.3.0",
    "mautic/api-library": "^2.6",
    "rvtraveller/qs-composer-installer": "^1.1",
    "simeydotme/jquery-ui-slider-pips": "1.11.4",
    "webflo/drupal-core-strict": "^8.4"
  },
  "require-dev": {
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "drupal/coder": "^8.2",
    "drupal/drupal-extension": "^3.1",
    "drush-ops/behat-drush-endpoint": "^0.0.4",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "mikey179/vfsstream": "^1.2",
    "pantheon-systems/quicksilver-pushback": "~1",
    "phpunit/phpunit": "^4.8",
    "symfony/css-selector": "^2.8"
  },
  "conflict": {
      "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "build-assets": [
      "@prepare-for-pantheon",
      "composer install --optimize-autoloader"
    ],
    "drupal-unit-tests": "cd web/core && ../../vendor/bin/phpunit --testsuite=unit --exclude-group Composer,DependencyInjection,PageCache",
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
    "post-install-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-create-project-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "web/libraries/{$name}": ["type:drupal-library"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "build-env": {
      "install-cms": [
        "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
        "drush pm-enable config_direct_save simple_block --yes",
        "drush pm-uninstall block_content --yes"
      ],
      "export-configuration": "drush config-export --yes"
    },
    "drupal-scaffold": {
      "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{version}/{path}",
      "includes": [
        "sites/default/default.services.pantheon.preproduction.yml",
        "sites/default/settings.pantheon.php"
      ],
      "excludes": [
        ".csslintrc",
        ".editorconfig",
        ".eslintignore",
        ".eslintrc.json",
        ".htaccess",
        "web.config"
      ]
    },
    "patches": {
      "drupal/facets": {
        "critical error thrown": "https://www.drupal.org/files/issues/critical_error_thrown-2917323-14.patch"
      },
      "drupal/page_manager": {
        "Update 'page_manager.variant_route_filter' service according to core changes": "https://www.drupal.org/files/issues/2918564-22.patch"
      }
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
